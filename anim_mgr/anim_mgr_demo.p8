function mk_anim_mgr(opt)
	local mgr={
		st=opt.st,
		anims=opt.anims,
		cf=1,
		t=0,
	}
	
	mgr.cur_anim=function(s)
	 return	s.anims[s.st]
	end
	
	mgr.cur_spr=function(s)
		return s:cur_anim()[s.cf][1]
	end
	
	mgr.update=function(s)
		s.t+=1
		local anim=s:cur_anim()
		if(s.t>anim[s.cf][2])then
			s.t=0
			s.cf+=1
		end
		if(s.cf>#anim)s.cf=1
	end
	
	return mgr
end
