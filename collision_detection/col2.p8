--box 1, box 2
function aabb(b1,b2)
	return b1[1][1] <= b2[2][1] 
			 and b1[2][1] >= b2[1][1] 
			 and	b1[1][2] <= b2[2][2] 
			 and	b1[2][2] >= b2[1][2]
end

--box, color
function draw_box(box,c)
	rect(
		box[1][1],
		box[1][2],
		box[2][1],
		box[2][2],
		c
	)
end

function aabb_col_tbl(col,t)
	for i in all(t) do
	 if (aabb(col,i:col()))then
	 	return i
	 end
	end
	return false
end

function mk_map_walls(x,y)
	local walls={}
	for off_x=0,15 do
		for off_y=0,15 do
			local s=mget(x+off_x,y+off_y)
			if(fget(s,0)) then
				add(walls,{col=function()
					return {
						{off_x*8,off_y*8},
						{off_x*8+7,off_y*8+7}
					}
				end})
			end
		end
	end
	return walls
end
