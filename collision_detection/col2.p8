function _draw()
	cls()
	map(0,0)
	draw_debug_notif()
	draw_p()
	draw_wall_cols()
	draw_blocks()
end

function draw_p()
	spr(p.s_id,p.x,p.y)
	if(debug)then
		draw_p_col()
	end
end

function draw_p_col()
	local b_color=10
	local c
	
	cb=aabb_col_tbl(p:col(),blocks)
	cw=aabb_col_tbl(p:col(),walls)
	
	if(cb or cw)b_color=8
	
	draw_box(p:col(),b_color)
end

function draw_blocks()
	for b in all(blocks) do
		local col=b:col()
		spr(5,col[1][1],col[1][2])
		local c=10
		if(aabb(col,p:col()))c=8
		draw_box(col,c)
	end
end

function draw_wall_cols()
	for w in all(walls) do
		local c=10
		if(aabb(w:col(),p:col()))c=8
		draw_box(w:col(),c)
	end
end

function draw_debug_notif()
	local str="show player collision box: "
	str=str..tostr(debug)
	print(str,0,100,7)
	print("toggle: z",44,108,7)
end


